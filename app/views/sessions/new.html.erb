<h1>Login</h1>

<%= form_with url: login_path, method: :post do |f| %>
  <div>
    <%= label_tag :email %><br>
    <%= email_field_tag :email, params[:email], required: true %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>

<p>
  Don't have an account? <%= link_to "Register", register_path %>
</p>
