<h1>Register</h1>

<%= form_with url: register_path, method: :post, scope: :user, local: true do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email, required: true %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password, required: true %>
  </div>

  <div>
    <%= f.submit "Register" %>
  </div>
<% end %>

<p>
  Already have an account? <%= link_to "Login", login_path %>
</p>
